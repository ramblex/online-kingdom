<div class="album">
  <%= link_to image_tag(album.album_photos.first.photo.url(:thumb)), album, :rel => album.id %>
  <div class="name"><%= truncate album.name, :length => 40 %></div>
  <div class="info">
    <%= admin_links album %>
    By: <%= link_to album.user.username, album.user %>
  </div>
</div>
