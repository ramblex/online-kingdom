<h1>New album</h1>

<% form_for @album, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <% f.fields_for :album_photos do |photos| %>
    <p>
      <%= photos.label :name, 'Photo name' %>
      <%= photos.text_field :name %>
      <%= photos.label :photo %>
      <%= photos.file_field :photo %>
    </p>

    <% unless photos.object.new_record? %>
      <%= photos.check_box '_delete' %>
      <%= photos.label '_delete', 'Remove' %>
    <% end %>
  <% end %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', albums_path %>
