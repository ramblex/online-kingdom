<% form_for @article, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :category, 'Game' %><br />
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </p>
  <p>
    <%= f.label :news_category_id, 'Category' %><br />
    <%= f.collection_select :news_category_id, NewsCategory.all, :id, :name %>
  </p>
  <p>
    <%= f.label :preamble %><br />
    <%= f.text_area :preamble %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => 'mceEditor' %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :featured %><br />
    <%= f.check_box :featured %>
  </p>
  <% if can? :approve, @article %>
    <p>
      <%= f.label :approved %><br />
      <%= f.check_box :approved %>
    </p>
  <% end %>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>


