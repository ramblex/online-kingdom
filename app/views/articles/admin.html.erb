<h1>News administration</h1>
<%= link_to 'Add news item', new_article_path %>
<table class="admin-table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Approved?</th>
    <th>Date posted</th>
    <th>Admin</th>
  </tr>
  <% @articles.each do |article| %>
    <tr class="<%= cycle 'even', 'odd' %>">
      <td><%= article.title %></td>
      <td><%= article.user.username %></td>
      <td><%= article.approved %></td>
      <td><%= article.created_at %></td>
      <td><%= admin_links article, :none %></td>
    </tr>
  <% end %>
</table>
