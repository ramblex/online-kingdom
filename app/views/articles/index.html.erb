<% params[:lang] ||= 'English' %>
<ul id="lang">
  <li id="english" <%= 'class="selected"' if params[:lang].eql? 'English' %>>
    <%= link_to 'English', params.merge(:lang => 'English') %>
  </li>
  <li id="portuguese" <%= 'class="selected"' if params[:lang].eql? 'Portuguese' %>>
    <%= link_to 'Portuguese', params.merge(:lang => 'Portuguese') %>
  </li>
</ul>
<div id="full-col">
  <div class="box-title">
    <span class="medium-narrow"><span class="blue">NEWS</span> PAGE<br/></span>
    <span class="subtitle">CONTENT <span>CHANGER</span></span>
  </div>
  <ul id="news-category" class="switcher">
    <%= render :partial => 'shared/switcher_list' %>
  </ul>
  <div id="paginated-news-list">
    <%= render :partial => @articles %>
  </div>
  <div class="clear"></div>
  <div id="pagination">
      <%= will_paginate @articles,
        :previous_label => '&laquo;',
        :next_label => '&raquo;',
        :inner_window => 1,
        :outer_window => 0 %></div>
  <% if can? :create, Article %>
    <%= link_to 'Add a news item', new_article_path %>
  <% end %>
</div> <!-- end left-col -->

<% content_for :extra_js do %>
  <%= javascript_include_tag 'switcher' %>
  <script type="text/javascript">
    switcher('#news-category', '#paginated-news-list');
  </script>
<% end %>
