<%= render :partial => 'lang_switcher' %>
<div id="full-col" class="box">
  <div class="header">
    <%= title 'NEWS PAGE', 'CONTENT CHANGER' %>
    <ul id="news-category" class="switcher">
      <%= render :partial => 'shared/switcher_list' %>
    </ul>
    <div class="pagination"><%= will_paginate @articles %></div>
  </div>
  <div id="paginated-news-list">
    <%= render :partial => @articles %>
  </div>
  <div class="pagination"><%= will_paginate @articles %></div>
  <% if can? :create, Article %>
    <%= link_to 'Add a news item', new_article_path, :class => 'button' %>
  <% end %>
</div> <!-- end left-col -->

<% content_for :extra_js do %>
  <%= javascript_include_tag 'switcher' %>
  <script type="text/javascript">
    switcher('#news-category', '#paginated-news-list');
  </script>
<% end %>
