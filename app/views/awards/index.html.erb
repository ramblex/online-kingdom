<div id="left-col">
  <div class="box">
    <div class="box-title">
      <span class="blue">AWARDS</span> PAGE<br />
      <span class="subtitle">CONTENT <span>CHANGER</span></span>
    </div>
    <ul id="awards-switcher" class="switcher">
      <li><%= link_to 'ALL', params.merge(:category => 'all'), :class => 'selected' %></li>
      <% Category.all.each do |category| %>
        <li><%= link_to category.name, params.merge(:category => category.id) %></li>
      <% end %>
    </ul>

    <div id="awardlist">
      <%= render :partial => @awards %>
    </div>
  </div>
</div>

<% content_for :extra_js do %>
  <%= javascript_include_tag 'switcher' %>
  <script type="text/javascript">
    switcher('#awards-switcher', '#awardlist');
  </script>
<% end %>
