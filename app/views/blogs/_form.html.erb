<% form_for(@blog) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :preamble %><br />
    <%= f.text_area :preamble %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => 'mceEditor' %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>

