<% form_for @category, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, 'Name e.g. COD4' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :long_name, 'Long name e.g. Call of Duty 4' %><br />
    <%= f.text_field :long_name %>
  </p>
  <p>
    <%= f.label :ok_team_id, 'OK team for this category' %><br />
    <% if @category.new_record? %>
      <%= f.collection_select :ok_team_id, Team.all, :id, :name %>
    <% else %>
      <%= f.collection_select :ok_team_id, @category.teams, :id, :name %>
    <% end %>
  </p>
  <p>
    <% if @category.small_icon %>
      <%= image_tag @category.small_icon.url(:default) %>
    <% end %>
    <%= f.label :small_icon, 'Small icon (25x15)' %><br />
    <%= f.file_field :small_icon %>
  </p>

  <p><%= f.submit "Submit" %></p>
<% end %>
