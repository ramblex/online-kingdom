#full-col
  %h1 Private messages
  %p= link_to "New Message", new_message_path

  %h2 Received messages

  %table.admin-table
    %tr
      %th From
      %th Title
      %th
    - @received_messages.each do |message|
      %tr{:class => message.read ? 'read' : 'unread'}
        %td= h message.sender.username
        %td= h message.title
        %td= link_to 'Show', message

  %h2 Sent messages

  %table.admin-table
    %tr
      %th To
      %th Title
      %th
    - @sent_messages.each do |message|
      %tr
        %td= h message.recipient.username
        %td= h message.title
        %td= link_to 'Show', message
