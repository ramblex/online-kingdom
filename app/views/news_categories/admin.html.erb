<div class="box">
  <div class="header">
    <%= title 'NEWS CATEGORIES ADMIN' %>
  </div>
  <%= link_to 'Add category', new_news_category_path, :class => 'button' %>
  <table class="admin-table">
    <tr>
      <th>Name</th>
      <th>Admin</th>
    </tr>
    <% @news_categories.each do |category| %>
      <tr class="<%= cycle 'even', 'odd' %>">
        <td><%= category.name %></td>
        <td><%= admin_links category, :none %></td>
      </tr>
    <% end %>
  </table>
</div>
