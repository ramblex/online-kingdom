<div id="left-col">
  <div class="box">
    <div class="header">
      <%= title 'PLAYERS', 'CONTENT CHANGER' %>
      <ul id="player-categories" class="switcher">
        <%= render :partial => 'shared/switcher_list' %>
      </ul>
    </div>
    <div id="player-list">
      <%= render :partial => @ok_players %>
    </div>
    <% if can? :create, Player %>
      <%= link_to 'Create player/staff', new_ok_player_path %>
    <% end %>
  </div>
</div>

<div id="right-col">
  <div class="box">
    <div class="header">
      <%= title 'STAFF' %>
    </div>
    <div id="ok_staff">
      <%= render :partial => 'ok_staff', :collection => @ok_staff %>
    </div>
  </div>
  <div class="box">
    <div class="header">
      <%= title 'LAST MATCHES' %>
    </div>
    <div id="match-ticker" class="dotted">
      <%= render :partial => 'matches/match', :collection => @ok_matches, :locals => {:no_admin => true} %>
    </div>
    <%= link_to '&raquo; all matches', matches_path, :class => 'more' %>
    <div class="clear"></div>
  </div>
  <%= render :partial => 'shared/official_partners' %>
</div>
