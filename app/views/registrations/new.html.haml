#full-col
  %h2 Sign up

  - semantic_form_for resource_name, resource, :url => registration_path(resource_name) do |f|
    - f.inputs do
      = f.input :username
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      = f.input :country
      = f.input :birthdate, :order => [:day, :month, :year], :start_year => Time.now.year - 70
    - f.buttons do
      = f.commit_button :label => 'Sign up'
