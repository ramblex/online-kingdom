<div class="box">
  <div class="box-title">
    <span class="blue">SETT</span>INGS<br />
    <span class="subtitle">CONTENT <span>CHANGER</span></span>
  </div>
  <ul class="switcher">
    <% Setting.all.each do |section| %>
      <li><%= link_to section.name.upcase, "/settings/#{section.permalink}", :class => 'button' %></li>
    <% end %>
    <% if can? :manage, :any %>
      <li><%= link_to 'ADMIN', "/settings/admin", :class => 'button' %></li>
    <% end %>
  </ul>
</div>
