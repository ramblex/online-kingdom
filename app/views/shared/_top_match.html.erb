<% latest = Match.find(:last) %>
<div id="top-match-title">
  <% if latest.event.logo? %>
    <%= image_tag latest.event.logo.url(:default), :class => 'logo' %>
  <% end %>
  <span class="title"><%= latest.event.name %></span>
  <div class="rating"></div>
</div>
<div class="top-info">
  <%= latest.start_date %>
</div>
<div id="top-match-content">
  <div class="team">
    <%= image_tag latest.team1.logo.url, :class => 'logo' %>
    <%= link_to latest.team1.name, latest.team1, :class => 'name' %>
  </div>
  <div class="versus">VERSUS</div>
  <div class="team">
    <%= image_tag latest.team2.logo.url, :class => 'logo' %>
    <%= link_to latest.team2.name, latest.team2, :class => 'name' %>
  </div>
</div>
