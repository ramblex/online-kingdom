<% latest = Match.find(:last) %>
<div id="top-match-title">
  <div class="logo"></div>
  <span class="title"><%= latest.event.name %></span>
  <div class="rating"></div>
</div>
<div class="top-info">
  <%= latest.start_date %>
</div>
<div id="top-match-content">
  <div class="team">
    <div class="logo"></div>
    <div class="name"><%= latest.team1.name %></div>
  </div>
  <div class="versus">VERSUS</div>
  <div class="team">
    <div class="logo"></div>
    <div class="name"><%= latest.team2.name %></div>
  </div>
</div>
