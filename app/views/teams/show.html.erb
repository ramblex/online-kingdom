<div id="wide-left-col">
  <div class="box">
    <div class="header">
      <%= title 'TEAM' %>
    </div>
    <div class="matches">
      <div class="matches-title"><%= flag @team.country %><%= @team.name %><%= admin_links @team, 'team-admin-links' %></div>
      <table class="info">
        <tr class="odd">
          <td class="field">Established</td>
          <td><%= @team.created_at.to_formatted_s :no_time %></td>
        </tr>
        <tr>
          <td class="field">Game</td>
          <td><%= @team.category.name %></td>
        </tr>
        <tr class="odd">
          <td class="field">Country</td>
          <td><%= country_name @team.country %></td>
        </tr>
        <tr>
          <td class="field">Website</td>
          <td><%= link_to @team.website, @team.website, :target => '_blank' %></td>
        </tr>
      </table>
      <%= image_tag @team.logo.url(:default), :class => 'matches-logo' if @team.logo? %>
      <div class="matches-title">Players</div>
      <ul class="team-players">
        <% @team.players.each do |player| %>
          <li><%= flag player.country %><%= link_to player.nickname, player %></li>
        <% end %>
      </ul>
      <div class="matches-title">Latest results</div>
      <ul id="match-ticker" class="dotted">
        <%= render :partial => @matches %>
      </ul>
    </div>
  </div>
</div>

<div id="thin-right-col">
  <div class="box">
    <div class="header">
      <%= title 'CREDITS TO' %>
    </div>
    <%= render :partial => @team.user %>
  </div>
</div>
