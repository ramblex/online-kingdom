<% form_for @user do |f| %>
<p>
  <%= f.label :username %><br />
  <%= f.text_field :username %>
</p>
<p>
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</p>
<% if can? :update, :roles %>
<p>
  <%= f.label :roles %><br />
  <% for role in User::ROLES %>
    <%= check_box_tag "user[roles][]", role, @user.roles.include?(role) %>
    <%=h role.humanize %><br />
  <% end %>
  <%= hidden_field_tag "user[roles][]", "" %>
</p>
<% end %>
<p>
  <%= f.submit 'Update' %>
</p>
<% end %>
