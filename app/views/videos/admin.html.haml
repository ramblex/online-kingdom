.box
  .header
    = title 'VIDEO ADMINISTRATION'
  =link_to 'Add video', new_video_path, :class => 'button'
  %table.admin-table
    %tr
      %th Name
      %th Uploader
      %th Encoding status
      %th Admin
    - @videos.each do |video|
      %tr
        %td= video.name
        %td= video.user.username
        %td= video.encoded_state
        %td= admin_links video, :none, {}, {:no_edit => true}
