<div id="wide-left-col">
  <div class="box">
    <div class="header">
      <%= title 'VIDEOS PAGE', 'CONTENT CHANGER' %>
      <ul class="switcher">
        <% highlight_current_link({:default => 'all', :current_page => :current_video_category?}) do |n| %>
          <li><%= n.link_to 'ALL',
                  params.merge(:video_category => 'all',
                               :anchor => 'content'),
                  :class => 'button' %></li>
          <% VideoCategory.all.each do |category| %>
            <li><%= n.link_to category.name.upcase,
                            params.merge(:video_category => category.id,
                                         :anchor => 'content'),
                            :class => 'button'%></li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <%= render :partial => @videos %>
  </div>
</div>

<div id="thin-right-col">
  <%= render :partial => @advert, :locals => {:image_size => :right_side} %>
</div>
