<div class="box">
  <div class="header">
    <%= title @video.name.upcase %>
  </div>
  <center>
    <video poster="<%= @video.poster %>" controls="">
      <source width="800" height="450" src="<%= @video.output_url %>">
    </video>
  </center>
</div>

<div id="wide-left-col">
  <div class="box">
    <div class="header">
      <%= title 'COMMENTS' %>
    </div>
  </div>
</div>

<div id="thin-right-col">
  <div class="box">
    <div class="header">
      <%= title 'CREDITS TO' %>
    </div>
    <%= render :partial => @video.user %>
  </div>
</div>
